					"name": "Create Student (SOAP)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Test: Response status should be 200",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"// Test: Response is XML",
									"pm.test(\"Response is XML\", function () {",
									"    pm.response.to.have.header(\"Content-Type\");",
									"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"xml\");",
									"});",
									"",
									"// Test: Response contains student data",
									"pm.test(\"Response contains student\", function () {",
									"    pm.expect(pm.response.text()).to.include(\"createStudentResponse\");",
									"    pm.expect(pm.response.text()).to.include(\"<ns2:id>\");",
									"    pm.expect(pm.response.text()).to.include(\"Jane Smith\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],

									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('data');",
									"});",
									"",
									"// Test: Student data exists",
									"pm.test(\"Student data retrieved\", function () {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data.studentById) {",
									"        pm.expect(jsonData.data.studentById).to.have.property('id');",
									"        pm.expect(jsonData.data.studentById).to.have.property('name');",
									"    }",
									"});"
